<h1>Listing itemdetails</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Store</th>
      <th>Barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itemdetails.each do |itemdetail| %>
      <tr>
        <td><%= itemdetail.description %></td>
	<td><%= itemdetail.item.storeid %></td>
        <td><%= itemdetail.barcode %></td>
        <td><%= link_to 'Show', itemdetail %></td>
        <td><%= link_to 'Edit', edit_itemdetail_path(itemdetail) %></td>
        <td><%= link_to 'Destroy', itemdetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Itemdetail', new_itemdetail_path %>
